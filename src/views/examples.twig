{% import 'snippets/elements.twig' as elements %}

{% extends "./layout/base.twig" %}

{% block title %}Examples{% endblock %}


{% block scripts %}
    {{ parent() }}

    <script src="{{ frontend_public_url }}/js/examples.js"></script>
{% endblock %}

{% block content %}

    <section class="s-example">
        <div class="s-example__container">

            <h1 class="el-title">
                Hello!
            </h1>

            <ul>
                <li><a href="#dev-variables">Dev variables</a></li>
                <li><a href="#icons-example">Icons example</a></li>
                <li><a href="#mock-data-example">Twig include & Mock data</a></li>
                <li><a href="#buttons-example">Buttons example</a></li>
                <li><a href="#form-fields-example">Form Fields example</a></li>
            </ul>
        </div>
    </section>


    <div class="s-example">
        <div class="s-example__container">

            <h1 class="el-title">
                Twig examples
            </h1>

            <article id="dev-variables" class="s-example__line">
                <h2 class="el-subtitle">isGulpTwig variable</h2>
                <p>isGulpTwig - TWIG variable to detect that this is dev mode:</p>

                <p>Check if npm or PHP build:
                    {% if not isGulpTwig %}
                        <span style="color: red"> is not GULP  </span>
                    {% else %}
                        <span style="color: red"> GULP detected </span>
                    {% endif %}
                </p>
            </article>

            <article id="icons-example" class="s-example__line">
                <h2 class="el-subtitle">Icons example:</h2>

                {% include "elements/icon.twig"  with { name: "ic-google" } %}
                {% include "elements/icon.twig"  with { name: "ic-instagram" } %}
                {% include "elements/icon.twig"  with { name: "ic-linkedin" } %}
                {% include "elements/icon.twig"  with { name: "ic-twitter" } %}

                <h2 class="el-subtitle mt-4">Icons with macro snippets :</h2>

                {{ elements.icon("ic-google") }}
                {{ elements.icon("ic-instagram") }}
                {{ elements.icon("ic-linkedin", 'text-muted') }}

                <p>Read more about macros <a target="_blank"
                                             href="https://wiki.effective-soft.com/display/ESHTML/Twig+macro">here</a>
                </p>

            </article>

        </div>
    </div>

    {% include 'sections/example.twig' with { args: _example } %}


    <div class="s-example" id="buttons-example">
        <div class="s-example__container">

            <h1 class="el-title">
                Style Guide examples
            </h1>

            <article class="s-example__line">

                <h2 class="el-subtitle">Buttons example:</h2>

                <button class="btn" type="button">Button</button>
                <a href="#" class="btn">Button link</a>


                <br/>
                <br/>

                <button type="button" class="btn">
                    Button with icon
                    {% include "elements/icon.twig"  with { name: "ic-angle-right", not_element: true, modifier: "btn__icon" } %}
                </button>

                <button type="button" class="btn btn--icon">
                    {% include "elements/icon.twig"  with { name: "ic-angle-right", not_element: true, modifier: "btn__icon" } %}
                </button>

                <button type="button" class="btn btn--icon btn--text">
                    {% include "elements/icon.twig"  with { name: "ic-angle-right", not_element: true, modifier: "btn__icon" } %}
                </button>

                <br/>
                <br/>

                <a href="#" class="btn btn--text"> Button text link</a>
                <button type="button" class="btn btn--text"> Button text button</button>

            </article>

            <article class="s-example__line" id="wysiwyg-example">
                <h2 class="el-subtitle">Form Fields example</h2>

                <div class="el-wysiwyg">

                    <h1>h1 Lorem ipsum dolor sit.</h1>
                    <h2>h2 Lorem ipsum dolor.</h2>
                    <h3>h3 Lorem ipsum dolor sit amet, consectetur.</h3>
                    <h4>h4 Lorem ipsum consectetur.</h4>
                    <h5>h5 Lorem ipsum dolor sit amet, consectetur.</h5>
                    <h6>h6 Lorem consectetur.</h6>


                    <h2>ul :</h2>
                    <ul>
                        <li> Lorem ipsum dolor sit.</li>
                        <li> Lorem ipsum dolor sit amet, consectetur adipisicing elit. Commodi.</li>
                        <li> Lorem ipsum dolor sit amet, consectetur adipisicing elit. Alias architecto aut dicta est,
                            facilis iste maxime sequi sit. Magni, nihil!
                        </li>
                    </ul>

                    <h2>ol :</h2>
                    <ol>
                        <li> Lorem ipsum dolor sit amet, consectetur adipisicing elit. Corporis cum praesentium
                            voluptatem?
                        </li>
                        <li> Lorem ipsum dolor sit amet, consectetur adipisicing elit. Corporis cum praesentium
                            voluptatem?
                        </li>
                        <li> Lorem ipsum dolor sit amet, consectetur adipisicing elit. Corporis cum praesentium
                            voluptatem?
                        </li>
                    </ol>

                    <h2>p and inline tags :</h2>
                    <p>Lorem ipsum dolor sit <a href=""> link here</a>, consectetur adipisicing elit. Fuga ipsam modi odio sequi tempora
                        tempore! Distinctio ea eligendi et sequi! <b> b tag </b> architecto <em>em tag</em> nemo ratione
