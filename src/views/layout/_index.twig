<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <link rel="preload" href="../../fonts/Mulish-Bold.woff2" as="font" crossorigin="anonymous">
    <link rel="preload" href="../../fonts/Mulish-Regular.woff2" as="font" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" type="text/css" href="styles/style.css">
</head>
<body class="body {{ body_class }}">
{% block template %}

    {% include 'areas/header.twig' %}

    <main class="{{ main_class }}">

        {{ content is defined ? content }}

    </main>

    {% include 'areas/footer.twig' %}

{% endblock %}


{% block scripts %}
    <script src="./js/scripts.js"></script>
{% endblock %}
</body>
</html>